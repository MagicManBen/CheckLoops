<body>
  <div class="container">
    <h1>Setup Holiday Approval System</h1>

    <div id="status"></div>

    <button onclick="checkDatabase()">Check Database Status</button>
    <button onclick="addApprovalColumn()">Add Approval Column</button>
    <button onclick="loadUsers()">Load All Users</button>

    <div id="userList" class="user-list"></div>
  </div>

  <script type="module">
    import { createClient } from 'https://cdn.jsdelivr.net/npm/@supabase/supabase-js@2/+esm';

    const SUPABASE_URL = 'https://unveoqnlqnobufhublyw.supabase.co';
    const SERVICE_ROLE_KEY = 'eyJhbGciOiJIUzI1NiIsInR5cCI6IkpXVCJ9.eyJpc3MiOiJzdXBhYmFzZSIsInJlZiI6InVudmVvcW5scW5vYnVmaHVibHl3Iiwicm9sZSI6InNlcnZpY2Vfcm9sZSIsImlhdCI6MTc1NTAxNzI3NiwiZXhwIjoyMDcwNTkzMjc2fQ.CJxV14F0T2TWkAjeR4bpYiBIOwLwyfzF9WzAWwS99Xc';

    const supabase = createClient(SUPABASE_URL, SERVICE_ROLE_KEY);

    function showStatus(message, type = 'info') {
      const statusDiv = document.getElementById('status');
      statusDiv.className = `status ${type}`;
      statusDiv.textContent = message;
    }

    window.checkDatabase = async function() {
      try {
        // Check if the column exists
        const { data, error } = await supabase
          .from('master_users')
          .select('auth_user_id, full_name, holiday_approved')
          .limit(1);

        if (error) {
          if (error.message.includes('column')) {
            showStatus('Column "holiday_approved" does not exist in kiosk_users table', 'error');
          } else {
            showStatus('Error: ' + error.message, 'error');
          }
        } else {
          showStatus('Column "holiday_approved" exists and is accessible!', 'success');
        }
      } catch (err) {
        showStatus('Error checking database: ' + err.message, 'error');
      }
    };

    window.addApprovalColumn = async function() {
      try {
        showStatus('Attempting to add column...', 'info');

        // First, check current table structure
        const { data: currentData, error: checkError } = await supabase
          .from('master_users')
          .select('*')
          .limit(1);

        if (!checkError || !checkError.message.includes('column')) {
          // Try to check if column already exists
          const { data: testData, error: testError } = await supabase
            .from('master_users')
            .select('holiday_approved')
            .limit(1);

          if (!testError) {
            showStatus('Column already exists!', 'success');
            return;
          }
        }

        // If we get here, column doesn't exist
        // We need to add it through Supabase dashboard or SQL Editor
        showStatus('Column needs to be added manually. Please go to Supabase Dashboard > SQL Editor and run: ALTER TABLE kiosk_users ADD COLUMN holiday_approved BOOLEAN DEFAULT FALSE;', 'info');

      } catch (err) {
        showStatus('Error: ' + err.message, 'error');
      }
    };

    window.loadUsers = async function() {
      try {
        const { data: users, error } = await supabase
          .from('master_users')
          .select('auth_user_id, full_name, holiday_approved')
          .order('full_name');

        if (error) {
          if (error.message.includes('column')) {
            showStatus('Column "holiday_approved" does not exist. Please add it first.', 'error');
            return;
          }
          showStatus('Error loading users: ' + error.message, 'error');
          return;
        }

        const userListDiv = document.getElementById('userList');
        userListDiv.innerHTML = '<h3>All Users:</h3>';

        users.forEach(user => {
          const userItem = document.createElement('div');
          userItem.className = 'user-item';
          userItem.innerHTML = `
            <div>
              <strong>${user.full_name || 'Unknown'}</strong>
              <span class="${user.holiday_approved ? 'approved' : 'not-approved'}">
                (${user.holiday_approved ? 'Approved' : 'Not Approved'})
              </span>
            </div>
            ${!user.holiday_approved ? `
              <button onclick="approveUser('${user.user_id}', '${user.full_name || 'User'}')">
                Approve
              </button>
            ` : ''}
          `;
          userListDiv.appendChild(userItem);
        });

        showStatus(`Loaded ${users.length} users`, 'success');
      } catch (err) {
        showStatus('Error loading users: ' + err.message, 'error');
      }
    };

    window.approveUser = async function(userId, userName) {
      try {
        const { data, error } = await supabase
          .from('master_users')
          .update({ holiday_approved: true })
          .eq('auth_user_id', userId);

        if (error) {
          showStatus('Error approving user: ' + error.message, 'error');
          return;
        }

        showStatus(`Approved holidays for ${userName}!`, 'success');
        loadUsers(); // Reload the list
      } catch (err) {
        showStatus('Error: ' + err.message, 'error');
      }
    };

    // Check status on load
    checkDatabase();
  </script>

    <!-- Debug Console - Persistent across all pages -->
    <script src="debug-console.js"></script>
</body>

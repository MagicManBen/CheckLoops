    "test:debug": "PWDEBUG=1 playwright test --project=chromium",
    "nav:training": "node scripts/nav-training.mjs",
    "tasks:list": "node scripts/tasks-cli.mjs list",
    "tasks:show": "node scripts/tasks-cli.mjs show",
    "tasks:complete": "node scripts/tasks-cli.mjs complete",
    "tasks:reopen": "node scripts/tasks-cli.mjs reopen",

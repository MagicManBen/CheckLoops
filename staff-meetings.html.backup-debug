        // Auto-save the transcribed notes
        statusDiv.innerHTML = '<p style="margin: 0; color: #0369a1;">üíæ Saving transcript...</p>';
        await window.meetingsManager.saveMeetingNotes(currentMeetingId, transcript);

        // Success message
        statusDiv.innerHTML = '<p style="margin: 0; color: #16a34a;">‚úÖ Recording saved and transcribed successfully!</p>';
        
        // Hide status after 3 seconds
        setTimeout(() => { statusDiv.style.display = 'none'; }, 3000);


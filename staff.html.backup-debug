          const { data: quizData } = await supabase
            .from('quiz_attempts')
            .select('*')
            .eq('site_id', siteId)
            .order('created_at', { ascending: false })
            .limit(10);

          console.log('Quiz data for activities:', quizData);

          if (quizData) {
            for (const q of quizData) {
              const isUserQuiz = q.user_id === userId;
              const isPractice = q.is_practice || false;
              const preferredVariants = [q.score_percent >= 80 ? 'happy' : 'sad'];
              if (!isUserQuiz && q.score_percent < 80) {
                preferredVariants.push('neutral');
              }

              const variantAvatar = avatarsAllowed && !isUserQuiz && q.user_id
                ? await getAvatarVariantUrl(q.user_id, preferredVariants)
                : null;

              activities.push({
                timestamp: q.completed_at || q.created_at,
                type: 'quiz',
                category: 'quiz',
                userId: q.user_id,
                title: isUserQuiz
                  ? (isPractice ? 'You completed a practice quiz' : 'You completed the weekly quiz')
                  : `${q.participant_name || 'Someone'} completed a ${isPractice ? 'practice' : 'weekly'} quiz`,
                detail: `Score: ${q.score_percent || 0}%`,
                status: q.score_percent >= 80 ? 'success' : 'warning',
                icon: '🧠',
                avatar: isUserQuiz ? currentUserAvatar : variantAvatar,
                isOwn: isUserQuiz,
                color: q.score_percent >= 80 ? '#10b981' : '#f59e0b'
              });
            }
          }
        } catch (e) {
          console.error('Could not fetch quiz attempts:', e);
        }

        try {
          const { data: trainingData } = await supabase
            .from('training_records')
            .select('*')
            .eq('site_id', siteId)
            .order('created_at', { ascending: false })
            .limit(10);

          if (trainingData && trainingData.length > 0) {
            for (const t of trainingData) {
              const isUserTraining = t.user_id === userId;
              const variantAvatar = avatarsAllowed && !isUserTraining && t.user_id
                ? await getAvatarVariantUrl(t.user_id, ['determined', 'neutral', 'happy'])
                : null;

              activities.push({
                timestamp: t.created_at,
                type: 'training',
                category: 'training',
                userId: t.user_id,
                title: isUserTraining
                  ? `You uploaded ${t.training_type || 'training'}`
                  : `${t.staff_name || 'Someone'} uploaded ${t.training_type || 'training'}`,
                detail: t.status || 'Certificate uploaded',
                status: 'info',
                icon: '🎓',
                avatar: isUserTraining ? currentUserAvatar : variantAvatar,
                isOwn: isUserTraining,
                color: '#8b5cf6'
              });
            }
          } else {
            const { data: staffTrainingData } = await supabase
              .from('staff_training_records')
              .select('*')
              .eq('site_id', siteId)
              .order('created_at', { ascending: false })
              .limit(10);

            if (staffTrainingData) {
              for (const t of staffTrainingData) {
                const isUserTraining = t.user_id === userId;
                const variantAvatar = avatarsAllowed && !isUserTraining && t.user_id
                  ? await getAvatarVariantUrl(t.user_id, ['determined', 'neutral', 'happy'])
                  : null;

                activities.push({
                  timestamp: t.created_at,
                  type: 'training',
                  category: 'training',
                  userId: t.user_id,
                  title: isUserTraining
                    ? `You uploaded ${t.training_type || 'training'}`
                    : `${t.staff_name || 'Someone'} uploaded ${t.training_type || 'training'}`,
                  detail: t.status || 'Certificate uploaded',
                  status: 'info',
                  icon: '🎓',
                  avatar: isUserTraining ? currentUserAvatar : variantAvatar,
                  isOwn: isUserTraining,
                  color: '#8b5cf6'
                });
              }
            }
          }
        } catch (e) {
          console.error('Could not fetch training records:', e);
        }

        try {
          const { data: newMembers } = await supabase
            .from('master_users')
            .select('auth_user_id, full_name, avatar_url, created_at, nickname')
            .eq('site_id', siteId)
            .gte('created_at', oneWeekAgo.toISOString())
            .order('created_at', { ascending: false })
            .limit(5);

          if (newMembers) {
            for (const member of newMembers) {
              const isUser = member.auth_user_id === userId;
              const variantAvatar = avatarsAllowed && member.auth_user_id
                ? await getAvatarVariantUrl(member.auth_user_id, ['happy', 'excited', 'neutral'], member.avatar_url)
                : null;

              activities.push({
                timestamp: member.created_at,
                type: 'new_member',
                category: 'team',
                userId: member.auth_user_id,
                title: isUser
                  ? 'Welcome! You joined the team! 🎉'
                  : `${member.nickname || member.full_name || 'A new member'} joined the team!`,
                detail: isUser ? 'Great to have you here!' : 'Let\'s give them a warm welcome!',
                status: 'celebration',
                icon: '🎊',
                avatar: isUser ? currentUserAvatar : variantAvatar,
                isOwn: isUser,
                color: '#ec4899',
                isNew: new Date(member.created_at) > oneDayAgo
              });
            }
          }
        } catch (e) {
          console.error('Could not fetch new members:', e);
        }

        // Skip profile updates that are just avatar emotion changes
        try {
          const { data: profileUpdates } = await supabase
            .from('master_users')
            .select('auth_user_id, full_name, nickname, avatar_url, updated_at, created_at')
            .eq('site_id', siteId)
            .gte('updated_at', oneWeekAgo.toISOString())
            .order('updated_at', { ascending: false })
            .limit(10);

          if (profileUpdates) {
            // Get recent emotion changes to filter out avatar-only updates
            const { data: recentEmotionChanges } = await supabase
              .from('avatar_emotion_changes')
              .select('user_id, created_at')
              .eq('site_id', String(siteId))
              .gte('created_at', oneWeekAgo.toISOString());

            const emotionChangeSet = new Set();
            if (recentEmotionChanges) {
              recentEmotionChanges.forEach(change => {
                // Create a key for each emotion change (user + rounded timestamp)
                const timeKey = Math.floor(new Date(change.created_at).getTime() / 10000); // 10 second window
                emotionChangeSet.add(`${change.user_id}-${timeKey}`);
              });
            }

            for (const p of profileUpdates) {
              const isUser = p.auth_user_id === userId;
              if (p.updated_at && new Date(p.updated_at) > new Date(p.created_at || 0)) {
                // Check if this update happened around the same time as an emotion change
                const updateTimeKey = Math.floor(new Date(p.updated_at).getTime() / 10000);
                const isJustEmotionChange = emotionChangeSet.has(`${p.auth_user_id}-${updateTimeKey}`);

                // Skip this profile update if it coincides with an emotion change
                if (isJustEmotionChange) {
                  console.log('Skipping profile update that coincides with emotion change');
                  continue;
                }

                const variantAvatar = avatarsAllowed && p.auth_user_id
                  ? await getAvatarVariantUrl(p.auth_user_id, ['neutral', 'confused', 'happy'], p.avatar_url)
                  : null;

                activities.push({
                  timestamp: p.updated_at,
                  type: 'profile_update',
                  category: 'profile',
                  userId: p.auth_user_id,
                  title: isUser
                    ? 'You updated your profile'
                    : `${p.nickname || p.full_name || 'Someone'} updated their profile`,
                  detail: 'Profile refreshed ✨',
                  status: 'info',
                  icon: '👤',
                  avatar: isUser ? currentUserAvatar : variantAvatar,
                  isOwn: isUser,
                  color: '#6366f1'
                });
              }
            }
          }
        } catch (e) {
          console.error('Could not fetch profile updates:', e);
        }

        // Fetch avatar emotion changes
        try {
          const { data: emotionChanges } = await supabase
            .from('avatar_emotion_changes')
            .select('*')
            .eq('site_id', String(siteId))
            .gte('created_at', oneWeekAgo.toISOString())
            .order('created_at', { ascending: false })
            .limit(10);

          if (emotionChanges && emotionChanges.length > 0) {
            // Get user details for emotion changes
            const emotionUserIds = [...new Set(emotionChanges.map(e => e.user_id))];
            const { data: emotionUsers } = await supabase
              .from('master_users')
              .select('auth_user_id, nickname, full_name')
              .in('auth_user_id', emotionUserIds);

            const emotionUserMap = {};
            if (emotionUsers) {
              emotionUsers.forEach(u => {
                emotionUserMap[u.auth_user_id] = u;
              });
            }

            for (const change of emotionChanges) {
              const isUser = change.user_id === userId;
              const userData = emotionUserMap[change.user_id] || {};
              const userName = userData.nickname || userData.full_name || 'Someone';
              const moodEmoji = {
                happy: '😊',
                sad: '😢',
                confused: '😕',
                angry: '😠',
                surprised: '😮',
                relaxed: '😌',
                excited: '🤩',
                tired: '😴',
                determined: '💪',
                neutral: '😐'
              }[change.mood] || '🎭';

              activities.push({
                timestamp: change.created_at,
                type: 'avatar_emotion',
                category: 'avatar_emotion',
                userId: change.user_id,
                title: isUser
                  ? `You are feeling ${change.mood_name || change.mood}!`
                  : `${userName} is feeling ${change.mood_name || change.mood}!`,
                detail: `Mood changed to: ${moodEmoji} ${change.mood_name || change.mood}`,
                status: 'info',
                icon: moodEmoji,
                avatar: change.avatar_url || (isUser ? currentUserAvatar : null),
                isOwn: isUser,
                color: '#ec4899'
              });
            }
          }
        } catch (e) {
          console.error('Could not fetch avatar emotion changes:', e);
        }

        try {
          let holidays = null;

          const { data: holidayData, error: holidayError } = await supabase
            .from('holiday_requests')
            .select('*')
            .eq('site_id', siteId)
            .order('created_at', { ascending: false })
            .limit(10);

          if (!holidayError && holidayData?.length) {
            holidays = holidayData;
          } else {
            const { data: legacyData } = await supabase
              .from('4_holiday_requests')
              .select('*')
              .eq('site_id', siteId)
              .order('created_at', { ascending: false })
              .limit(10);
            if (legacyData) holidays = legacyData;
          }

          if (holidays?.length) {
            for (const h of holidays) {
              const isUserHoliday = h.user_id === userId;
              if (h.status === 'approved' && !isUserHoliday) {
                continue;
              }

              let title;
              let icon;
              let color;

              if (h.status === 'approved') {
                title = isUserHoliday
                  ? 'Your holiday was approved! ✅'
                  : `${h.staff_name || 'Someone'}'s holiday approved`;
                icon = '🏖️';
                color = '#10b981';
              } else if (h.status === 'declined' || h.status === 'rejected') {
                title = isUserHoliday
                  ? 'Your holiday request was declined'
                  : `${h.staff_name || 'Someone'}'s holiday declined`;
                icon = '📅';
                color = '#ef4444';
              } else {
                title = isUserHoliday
                  ? 'You requested holiday'
                  : `${h.staff_name || 'Someone'} requested holiday`;
                icon = '📆';
                color = '#06b6d4';
              }

              const preferredVariants = h.status === 'approved'
                ? ['relaxed', 'happy']
                : (h.status === 'declined' || h.status === 'rejected'
                  ? ['sad', 'tired', 'angry']
                  : ['confused', 'neutral']);

              const variantAvatar = avatarsAllowed && !isUserHoliday && h.user_id
                ? await getAvatarVariantUrl(h.user_id, preferredVariants)
                : null;

              activities.push({
                timestamp: h.updated_at || h.created_at,
                type: 'holiday',
                category: 'holiday',
                userId: h.user_id,
                title,
                detail: `${h.start_date} – ${h.end_date}`,
                status: h.status,
                icon,
                avatar: isUserHoliday ? currentUserAvatar : variantAvatar,
                isOwn: isUserHoliday,
                color
              });
            }
          }
        } catch (e) {
          console.error('Could not fetch holiday requests:', e);
        }

        activities.sort((a, b) => new Date(b.timestamp || 0) - new Date(a.timestamp || 0));

        const recentActivities = activities.slice(0, 15);

        console.log('Total activities found:', activities.length, 'Showing:', recentActivities.length);

        loadingEl.style.display = 'none';

        if (recentActivities.length === 0) {
          emptyEl.style.display = 'block';
          return;
        }

        feedEl.style.display = 'block';
        feedEl.innerHTML = recentActivities.map(activity => {
          const isNew = new Date(activity.timestamp) > oneDayAgo;
          const avatarContent = (avatarsAllowed && activity.avatar)
            ? `<img src="${activity.avatar}" alt="" data-user-id="${activity.userId || ''}" style="width: 100%; height: 100%; border-radius: 50%; object-fit: cover;">`
            : activity.icon;
          return `
          <div class="activity-item ${activity.type}" data-activity-type="${activity.type}" data-activity-id="${activity.category}_${new Date(activity.timestamp).getTime()}" data-user-id="${activity.userId || ''}">
            <div class="activity-avatar">${avatarContent}</div>
            <div class="activity-content">
              <div class="activity-title">
                ${activity.title}
                ${isNew ? '<span style="display: inline-block; padding: 2px 6px; background: linear-gradient(135deg, #fbbf24, #f59e0b); color: white; font-size: 10px; font-weight: bold; border-radius: 12px; margin-left: 8px;">NEW</span>' : ''}
                ${activity.isOwn ? '<span style="display: inline-block; padding: 2px 6px; background: var(--primary-lightest); color: var(--primary); border: 1px solid var(--primary); border-radius: 6px; font-size: 10px; font-weight: 600; margin-left: 4px;">YOU</span>' : ''}
              </div>
              <div class="activity-detail">${activity.detail}</div>
              <div class="activity-time">${fmtDate(activity.timestamp)}</div>
            </div>
          </div>
        `;
        }).join('');
        
        // Initialize activity likes functionality
        if (typeof window.initializeActivityLikes === 'function') {
          window.initializeActivityLikes().then(success => {
            console.log('Activity likes system initialized:', success);

            // After initializing likes, enhance with tooltips - give more time for hearts to be created
            setTimeout(() => {
              if (typeof window.enhanceActivityLikesTooltips === 'function') {
                window.enhanceActivityLikesTooltips().then(result => {
                  console.log('Activity likes tooltips enhanced:', result);

                  // Double-check that hearts are clickable
                  const hearts = document.querySelectorAll('.activity-heart');
                  console.log('Found', hearts.length, 'heart elements after enhancement');

                  // Log first heart's click handler status
                  if (hearts.length > 0) {
                    console.log('First heart has click handler:', hearts[0]._clickHandler ? 'YES' : 'NO');
                    console.log('First heart has tooltip:', hearts[0]._tooltip ? 'YES' : 'NO');
                  }
                }).catch(err => {
                  console.error('Error enhancing tooltips:', err);
                });
              } else {
                console.warn('enhanceActivityLikesTooltips function not available - script may not be loaded yet');

                // Try again after a delay
                setTimeout(() => {
                  if (typeof window.enhanceActivityLikesTooltips === 'function') {
                    console.log('Retrying tooltip enhancement...');
                    window.enhanceActivityLikesTooltips();
                  }
                }, 2000);
              }
            }, 1500); // Increased timeout to ensure hearts are rendered
          }).catch(err => {
            console.error('Error initializing activity likes:', err);
          });
        } else {
          console.warn('initializeActivityLikes function not available');
        }
      } catch (e) {
        console.error('Activity load error:', e);
        loadingEl.style.display = 'none';
        emptyEl.style.display = 'block';
      }
    }

    // Setup Help Tour Button
    function setupHelpTourButton(profileRow, session) {
      const helpBtn = document.getElementById('help-tour-btn');
      if (!helpBtn) return;

      helpBtn.addEventListener('click', () => {
        alert('Welcome to your Staff Dashboard! Here you can manage your training, complete quizzes, and track your compliance status.');
      });
    }

    // Mobile menu toggle functionality
    document.addEventListener('DOMContentLoaded', function() {
      const mobileToggle = document.getElementById('mobile-menu-toggle');
      const navLinks = document.getElementById('nav-links');

      if (mobileToggle && navLinks) {
        mobileToggle.addEventListener('click', function() {
          navLinks.classList.toggle('mobile-open');

          // Update toggle icon
          const svg = mobileToggle.querySelector('svg');
          if (navLinks.classList.contains('mobile-open')) {
            svg.innerHTML = '<line x1="18" y1="6" x2="6" y2="18"></line><line x1="6" y1="6" x2="18" y2="18"></line>';
          } else {
            svg.innerHTML = '<line x1="3" y1="6" x2="21" y2="6"></line><line x1="3" y1="12" x2="21" y2="12"></line><line x1="3" y1="18" x2="21" y2="18"></line>';
          }
        });

        // Close mobile menu when clicking outside
        document.addEventListener('click', function(e) {
          if (!mobileToggle.contains(e.target) && !navLinks.contains(e.target)) {
            navLinks.classList.remove('mobile-open');
            const svg = mobileToggle.querySelector('svg');
            svg.innerHTML = '<line x1="3" y1="6" x2="21" y2="6"></line><line x1="3" y1="12" x2="21" y2="12"></line><line x1="3" y1="18" x2="21" y2="18"></line>';
          }
        });
      }
    });

    // Icons8 integration
    (function(){
      function i8(name, opts){
        opts = opts || {};
        var style = opts.style || 'fluency';
        var size = (opts.size == null) ? 48 : opts.size;
        var base = 'https://img.icons8.com';
        var path = [style, String(size || 48), encodeURIComponent(name) + '.png'].join('/');
        return base + '/' + path;
      }

      function setIcon(el){
        var name = el.getAttribute('data-i8');
        var size = el.getAttribute('data-i8-size');
        var style = el.getAttribute('data-i8-style') || 'fluency';
        var url = i8(name, {style: style, size: size ? parseInt(size,10) : undefined});
        el.src = url;
        if (!el.alt) el.alt = (name || '').replace(/[\-_]/g,' ');
      }

      function wireIcons(){
        document.querySelectorAll('img[data-i8]').forEach(setIcon);
      }

      if (document.readyState === 'loading') document.addEventListener('DOMContentLoaded', wireIcons);
      else wireIcons();

      window.i8 = i8;
    })();
    
    // Handle clicks on dashboard cards
    window.handleHolidayCardClick = async function() {
      try {
        const { data: { session } } = await supabase.auth.getSession();
        if (!session) {
          alert('Please sign in to access My Holidays.');
          return;
        }

        const { data: userData, error } = await supabase
          .from('master_users')
          .select('holiday_approved')
          .eq('auth_user_id', session.user.id)
          .single();

        if (error) {
          console.error('Error checking holiday approval:', error);
          alert('Unable to check holiday access. Please try again later.');
          return;
        }

        if (userData && userData.holiday_approved === true) {
          window.location.href = 'my-holidays.html';
        } else {
          alert('Your holiday entitlement is awaiting admin approval. Please check back later or contact your admin.');
        }
      } catch (error) {
        console.error('Error in handleHolidayCardClick:', error);
        alert('An error occurred. Please try again.');
      }
    };
    
    window.handleAlertsCardClick = function() {
      // Determine the most pressing alert and navigate to the appropriate page
      const alertCount = parseInt(document.getElementById('alerts-count').textContent || '0');
      
      if (alertCount === 0) {
        alert('There are no active alerts that require your attention.');
        return;
      }
      
      const alertSummary = document.getElementById('alerts-summary').textContent || '';
      
      if (alertSummary.includes('Training')) {
        window.location.href = 'staff-training.html';
      } else if (alertSummary.includes('Quiz')) {
        window.location.href = 'staff-quiz.html';
      } else {
        // Default to training page if we can't determine the specific alert
        window.location.href = 'staff-training.html';
      }
    };
  </script>


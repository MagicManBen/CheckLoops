    // Subscribe to realtime avatar emotion changes for all users in the site
    function setupAvatarEmotionRealtimeSubscription(siteId) {
      if (!siteId) return;

      // Subscribe to changes in master_users table for avatar_url updates
      const avatarChannel = supabase
        .channel('avatar-emotion-changes')
        .on('postgres_changes', {
          event: 'UPDATE',
          schema: 'public',
          table: 'master_users',
          filter: `site_id=eq.${siteId}`
        }, async (payload) => {
          console.log('Avatar update received:', payload);

          // Update all avatars for this user across the page
          if (payload.new && payload.new.auth_user_id && payload.new.avatar_url) {
            const userId = payload.new.auth_user_id;
            const newAvatarUrl = payload.new.avatar_url;

            // If this is the current user, update the navbar avatar
            if (currentUser && currentUser.id === userId) {
              updateAvatarDisplays(newAvatarUrl);
            }

            // Update all activity items with this user's avatar
            const activityItems = document.querySelectorAll('.activity-item');
            activityItems.forEach(item => {
              const avatarEl = item.querySelector('.activity-avatar img');
              if (avatarEl && avatarEl.getAttribute('data-user-id') === userId) {
                avatarEl.src = newAvatarUrl;
              }
            });

            // Refresh the activity feed to show the emotion change
            if (window.loadRecentActivity) {
              const displayName = currentProfile?.nickname || currentProfile?.full_name || currentUser?.email?.split('@')[0] || 'Staff';
              await loadRecentActivity(displayName, siteId, currentProfile);
            }
          }
        })
        .subscribe();

      // Also subscribe to inserts in avatar_emotion_changes table (if it exists)
      try {
        const emotionChangeChannel = supabase
          .channel('avatar-emotion-inserts')
          .on('postgres_changes', {
            event: 'INSERT',
            schema: 'public',
            table: 'avatar_emotion_changes',
            filter: `site_id=eq.${String(siteId)}`
          }, async (payload) => {
            console.log('New emotion change received:', payload);

            // Immediately refresh the activity feed to show the new emotion change
            if (window.loadRecentActivity && payload.new) {
              console.log('Realtime emotion change detected, refreshing feed...');
              const displayName = currentProfile?.nickname || currentProfile?.full_name || currentUser?.email?.split('@')[0] || 'Staff';
              // Refresh immediately
              await loadRecentActivity(displayName, siteId, currentProfile);
              // No need to re-initialize, loadRecentActivity already does it
            }
          })
          .subscribe((status) => {
            if (status === 'SUBSCRIPTION_ERROR') {
              console.warn('Could not subscribe to avatar_emotion_changes - table may not exist');
            }
          });
      } catch (err) {
        console.warn('Could not set up avatar emotion changes subscription:', err);

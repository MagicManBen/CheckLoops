    async function applyAvatarMood(variantKey) {
      if (avatarMenuBusy) return;
      if (!currentUser) return;

      const avatarsAllowed = siteSettings.enable_avatars !== false;
      if (!avatarsAllowed) return;

      const normalizedKey = !variantKey || variantKey === 'default' ? 'default' : variantKey;
      const cache = await ensureAvatarVariantCache(currentUser.id);
      const variantMap = cache?.map || {};
      const source = cache?.source || null;

      let targetUrl = null;
      if (normalizedKey === 'default') {
        targetUrl = originalAvatarUrl || source || currentProfile?.avatar_url || null;
      } else {
        targetUrl = variantMap[normalizedKey] || null;
      }

      if (!targetUrl) {
        setAvatarMenuStatus('This mood is not available right now.', true);
        return;
      }

      if (currentProfile?.avatar_url === targetUrl) {
        hideAvatarMenu();
        return;
      }

      avatarMenuBusy = true;
      setAvatarMenuStatus('Saving mood...', false);

      try {
        const { error: authError } = await supabase.auth.updateUser({ data: { avatar_url: targetUrl } });
        if (authError) throw authError;

        const { error: profileError } = await supabase
          .from('master_users')
          .update({ avatar_url: targetUrl, updated_at: new Date().toISOString() })
          .eq('auth_user_id', currentUser.id);

        if (profileError) throw profileError;

        if (currentProfile) {
          currentProfile.avatar_url = targetUrl;
        }

        // Track avatar emotion change as an activity
        try {
          const moodName = MOOD_LABELS[variantKey] || variantKey;
          const { error: activityError } = await supabase
            .from('avatar_emotion_changes')
            .insert({
              user_id: currentUser.id,
              site_id: String(currentProfile?.site_id), // Convert to string to match TEXT column
              mood: variantKey === 'default' ? 'neutral' : variantKey,
              mood_name: variantKey === 'default' ? 'Default' : moodName,
              avatar_url: targetUrl,
              created_at: new Date().toISOString()
            });
          if (activityError) {
            // If the table doesn't exist, show helpful message
            if (activityError.code === '42P01') {
              console.error('avatar_emotion_changes table does not exist!');
              console.error('Please run the SQL script: create_avatar_emotion_changes_SIMPLE.sql in your Supabase dashboard');

              // Even without the table, refresh the activity feed to show the change
              if (window.loadRecentActivity) {
                const displayName = currentProfile?.nickname || currentProfile?.full_name || currentUser?.email?.split('@')[0] || 'Staff';
                const siteId = currentProfile?.site_id;
                setTimeout(() => {
                  window.loadRecentActivity(displayName, siteId, currentProfile);
                }, 1000);
              }
            } else {
              console.error('Error tracking avatar emotion change:', activityError);
            }
          } else {
            // Successfully inserted, refresh activity feed immediately
            console.log('Emotion change recorded, refreshing activity feed...');
            if (window.loadRecentActivity) {
              const displayName = currentProfile?.nickname || currentProfile?.full_name || currentUser?.email?.split('@')[0] || 'Staff';
              const siteId = currentProfile?.site_id;
              // Refresh immediately to show the new emotion
              window.loadRecentActivity(displayName, siteId, currentProfile);
            }
          }
        } catch (trackingError) {
          console.error('Error tracking avatar emotion change:', trackingError);
        }

        updateAvatarDisplays(targetUrl);
        await setupAvatarMoodMenu(currentUser, currentProfile || {});
        setAvatarMenuStatus('Mood updated!', false);
        setTimeout(() => {
          hideAvatarMenu();
        }, 600);
      } catch (error) {
        console.error('Avatar mood update failed:', error);
        setAvatarMenuStatus('Could not update avatar. Please try again.', true);
      } finally {
        avatarMenuBusy = false;
      }
    }


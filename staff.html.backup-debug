  <script type="module">
    import { initSupabase, requireStaffSession, getCurrentUserSiteText, setTopbar, handleAuthState, navActivate, setRing, fmtDate, clearAuthData, computeCompliance, createAchievementClient, getSiteSettings } from './staff-common.js';

    // Global function to handle holidays click
    window.handleHolidaysClick = async function() {
      try {
        // Check if the card has the disabled class - if so, show the message without doing the fetch
        const holidaysCard = document.getElementById('holidays-card');
        if (holidaysCard && holidaysCard.classList.contains('disabled')) {
          alert('Your holiday entitlement is awaiting admin approval. Please check back later or contact your admin.');
          return;
        }
        
        const { data: { session } } = await supabase.auth.getSession();
        if (!session) {
          alert('Please sign in to access My Holidays.');
          return;
        }

        const { data: userData, error } = await supabase
          .from('master_users')
          .select('holiday_approved')
          .eq('auth_user_id', session.user.id)
          .single();

        if (error) {
          console.error('Error checking holiday approval:', error);
          alert('Unable to check holiday access. Please try again later.');
          return;
        }

        if (userData && userData.holiday_approved === true) {
          window.location.href = 'my-holidays.html';
        } else {
          alert('Your holiday entitlement is awaiting admin approval. Please check back later or contact your admin.');
        }
      } catch (error) {
        console.error('Error in handleHolidaysClick:', error);
        alert('An error occurred. Please try again.');
      }
    };

    const supabase = await initSupabase();
    window.supabase = supabase;

    handleAuthState(supabase);
    // Navigation will be rendered after settings are loaded

  document.getElementById('logout-btn')?.addEventListener('click', (e) => { e.preventDefault(); e.stopPropagation(); window.signOut && window.signOut(); });

    // Global site settings
    let siteSettings = {};
    const avatarVariantCache = {};
    let currentUser = null;
    let currentProfile = null;
    let currentDisplayName = 'Staff';
    let originalAvatarUrl = null;
    let avatarMenuEl = null;
    let avatarMenuStatusEl = null;
    let avatarMenuVisible = false;
    let avatarMenuInitialized = false;
    let avatarMenuBusy = false;
    let avatarTriggerEl = null;
    let currentVariantMap = {};
    let avatarSourceUserId = null;

    const MOOD_LABELS = {
      happy: 'Happy',
      sad: 'Sad',
      confused: 'Confused',
      angry: 'Angry',
      surprised: 'Surprised',
      relaxed: 'Relaxed',
      excited: 'Excited',
      tired: 'Tired',
      determined: 'Determined',
      neutral: 'Neutral'
    };

    const MOOD_ORDER = ['happy', 'excited', 'relaxed', 'determined', 'neutral', 'surprised', 'confused', 'tired', 'sad', 'angry'];

    function renderInitialAvatar(container, initial) {
      if (!container) return;
      container.style.background = 'linear-gradient(135deg, var(--primary), var(--accent))';
      container.innerHTML = `<div style="width: 100%; height: 100%; display: flex; align-items: center; justify-content: center; color: white; font-size: 2rem; font-weight: 700;">${initial}</div>`;
    }

    function updateAvatarDisplays(avatarUrl) {
      const useAvatars = siteSettings.enable_avatars !== false;
      const displayName = currentDisplayName || 'Staff';
      const initial = (displayName || 'S').charAt(0).toUpperCase();
      const navbarAvatar = document.getElementById('navbar-avatar');
      const avatarContents = document.getElementById('user-avatar-contents');

      if (navbarAvatar) {
        if (useAvatars && avatarUrl) {
          navbarAvatar.style.background = 'transparent';
          navbarAvatar.innerHTML = `<img src="${avatarUrl}" alt="${displayName}" style="width: 100%; height: 100%; border-radius: 50%; object-fit: cover;">`;
        } else {
          navbarAvatar.style.background = 'linear-gradient(135deg, var(--primary), var(--accent))';
          navbarAvatar.textContent = initial;
        }
      }

      if (avatarContents) {
        if (useAvatars && avatarUrl) {
          avatarContents.style.background = 'var(--white)';
          const img = document.createElement('img');
          img.src = avatarUrl;
          img.alt = displayName;
          img.draggable = false;
          img.onerror = () => renderInitialAvatar(avatarContents, initial);
          avatarContents.innerHTML = '';
          avatarContents.appendChild(img);
        } else {
          renderInitialAvatar(avatarContents, initial);
        }
      }
    }

    function getActiveAvatarKey(currentUrl, variantMap) {
      if (!currentUrl) return 'default';
      if (originalAvatarUrl && currentUrl === originalAvatarUrl) return 'default';
      for (const [key, url] of Object.entries(variantMap || {})) {
        if (url === currentUrl) return key;
      }
      return 'default';
    }

    function setAvatarMenuStatus(message, isError = false) {
      if (!avatarMenuStatusEl) return;
      avatarMenuStatusEl.textContent = message || '';
      avatarMenuStatusEl.classList.toggle('error', !!message && isError);
      avatarMenuStatusEl.style.display = message ? 'block' : 'none';
    }

    function markActiveAvatarOption(activeKey) {
      if (!avatarMenuEl) return;
      avatarMenuEl.querySelectorAll('.avatar-option').forEach(btn => {
        const isActive = (btn.dataset.variant || 'default') === activeKey;
        btn.classList.toggle('active', isActive);
        btn.setAttribute('aria-checked', isActive ? 'true' : 'false');
      });
    }

    function hideAvatarMenu() {
      if (!avatarMenuEl) return;
      setAvatarMenuStatus('', false);
      avatarMenuEl.classList.add('hidden');
      avatarMenuVisible = false;
      if (avatarTriggerEl) {
        avatarTriggerEl.setAttribute('aria-expanded', 'false');
      }
    }

    function positionAvatarMenu() {
      if (!avatarMenuEl || !avatarTriggerEl) return;
      const rect = avatarTriggerEl.getBoundingClientRect();
      const scrollY = window.scrollY || window.pageYOffset;
      const scrollX = window.scrollX || window.pageXOffset;
      avatarMenuEl.style.top = `${rect.bottom + scrollY + 12}px`;
      avatarMenuEl.style.left = `${rect.left + scrollX + rect.width / 2}px`;
    }

    function showAvatarMenu() {
      if (!avatarMenuEl) return;
      positionAvatarMenu();
      const activeKey = getActiveAvatarKey(currentProfile?.avatar_url, currentVariantMap);
      markActiveAvatarOption(activeKey);
      avatarMenuEl.classList.remove('hidden');
      avatarMenuVisible = true;
      if (avatarTriggerEl) {
        avatarTriggerEl.setAttribute('aria-expanded', 'true');
      }
    }

    function toggleAvatarMenu() {
      if (avatarMenuBusy) return;
      if (avatarMenuVisible) {
        hideAvatarMenu();
      } else {
        showAvatarMenu();
      }
    }

    function onAvatarTriggerKeydown(event) {
      if (event.key === 'Enter' || event.key === ' ') {
        event.preventDefault();
        toggleAvatarMenu();
      } else if (event.key === 'Escape' && avatarMenuVisible) {
        event.preventDefault();
        hideAvatarMenu();
      }
    }

    function onDocumentClick(event) {
      if (!avatarMenuVisible) return;
      if (!avatarMenuEl || !avatarTriggerEl) return;
      if (!avatarMenuEl.contains(event.target) && !avatarTriggerEl.contains(event.target)) {
        hideAvatarMenu();
      }
    }

    function onDocumentKeydown(event) {
      if (event.key === 'Escape' && avatarMenuVisible) {
        hideAvatarMenu();
      }
    }

    async function ensureAvatarVariantCache(userId) {
      if (avatarVariantCache[userId] !== undefined) {
        return avatarVariantCache[userId];
      }

      try {
        const { data, error } = await supabase
          .from('avatar_variants')
          .select('variant, image_url, source_avatar_url')
          .eq('user_id', userId);

        if (error) {
          console.warn('Avatar variant fetch failed for user', userId, error);
          avatarVariantCache[userId] = { map: {}, source: null };
        } else {
          const map = {};
          let source = null;
          for (const row of data || []) {
            if (row?.variant && row?.image_url) {
              map[row.variant] = row.image_url;
            }
            if (!source && row?.source_avatar_url) {
              source = row.source_avatar_url;
            }
          }
          avatarVariantCache[userId] = { map, source };
        }
      } catch (fetchError) {
        console.warn('Avatar variant fetch error for user', userId, fetchError);
        avatarVariantCache[userId] = { map: {}, source: null };
      }

      return avatarVariantCache[userId];
    }

    async function getAvatarVariantMap(userId) {
      const avatarsEnabled = siteSettings.enable_avatars !== false;
      if (!avatarsEnabled || !userId) return {};
      const cache = await ensureAvatarVariantCache(userId);
      return cache?.map || {};
    }

    async function getAvatarVariantUrl(userId, preferredVariants = [], fallbackUrl = null) {
      const variants = await getAvatarVariantMap(userId);
      const keys = Object.keys(variants || {});
      if (!keys.length) return fallbackUrl;

      for (const variant of preferredVariants) {
        if (variant && variants[variant]) {
          return variants[variant];
        }
      }

      if (variants.happy) return variants.happy;
      if (variants.neutral) return variants.neutral;
      return variants[keys[0]] || fallbackUrl;
    }

    function renderAvatarMoodMenu(variantMap) {
      if (!avatarMenuEl) return;
      currentVariantMap = { ...variantMap };

      const options = [];
      const defaultUrl = originalAvatarUrl || currentProfile?.avatar_url || null;
      options.push({
        key: 'default',
        label: 'Default',
        sub: 'Reset to your saved avatar',
        url: defaultUrl
      });

      const added = new Set();
      for (const key of MOOD_ORDER) {
        if (variantMap[key]) {
          options.push({
            key,
            label: MOOD_LABELS[key] || key,
            sub: 'Apply this mood avatar',
            url: variantMap[key]
          });
          added.add(key);
        }
      }

      for (const [key, url] of Object.entries(variantMap)) {
        if (!added.has(key)) {
          options.push({
            key,
            label: MOOD_LABELS[key] || key,
            sub: 'Apply this mood avatar',
            url
          });
        }
      }

      avatarMenuEl.innerHTML = '';

      const header = document.createElement('div');
      header.className = 'avatar-menu-header';
      header.textContent = 'Avatar moods';
      avatarMenuEl.appendChild(header);


    // ============================================
    // SECTION 2: HOME PAGE
    // ============================================
    console.log('\nüìã SECTION 2: HOME PAGE\n');

    if (!page.url().includes('home.html')) {
      await page.goto(`${BASE_URL}/home.html`);
      await page.waitForTimeout(2000);

    // ============================================
    // SECTION 11: RESPONSIVE DESIGN
    // ============================================
    console.log('\nüìã SECTION 11: RESPONSIVE DESIGN\n');

    // Test mobile view
    await page.setViewportSize({ width: 375, height: 667 });

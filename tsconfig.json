{
  "compilerOptions": {
    "target": "ES2022",
    "module": "ESNext",
    "lib": ["ES2022", "DOM"],
    "strict": false,
    "moduleResolution": "bundler",
    "esModuleInterop": true,
    "skipLibCheck": true,
    "allowJs": true,
    "noEmit": true,
    "resolveJsonModule": true,
    "types": ["./global.d.ts"]
  },
  "include": [
    "./supabase/functions/**/*",
    "./**/*.ts",
    "global.d.ts"
  ],
  "exclude": [
    "node_modules",
    "**/*.js"
  ]
}
